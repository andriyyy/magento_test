<?xml version="1.0" ?>
<config>
    <modules>
        <DS_Price>
            <version>0.0.1</version>
        </DS_Price>
    </modules>
    <admin>
        <routers>
            <dsprice_admin>
                <use>admin</use>
                <args>
                    <module>DS_Price</module>
                    <frontName>dsprice_admin</frontName>
                </args>
            </dsprice_admin>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <customer>
                <children>
                    <dsprice module="dsprice">
                        <title>Price Requests</title>
                        <sort_order>9999</sort_order>
                        <action>dsprice_admin/adminhtml_price</action>
                    </dsprice>
                </children>
            </customer>
        </menu>
    </adminhtml>
    <frontend>
        <routers>
            <dsprice>
                <use>standard</use>
                <args>
                    <module>DS_Price</module>
                    <frontName>price</frontName>
                </args>
            </dsprice>
        </routers>
    </frontend>
    <global>
        <blocks>
            <dsprice>
                <class>DS_Price_Block</class>
            </dsprice>
        </blocks>
        <helpers>
            <dsprice>
                <class>DS_Price_Helper</class>
            </dsprice>
        </helpers>
        <models>
            <dsprice>
                <class>DS_Price_Model</class>
                <resourceModel>dsprice_resource</resourceModel>
            </dsprice>
            <dsprice_resource>
                <class>DS_Price_Model_Resource</class>
                <entities>
                    <table_price>
                        <table>ds_price_entities</table>
                    </table_price>
                </entities>
            </dsprice_resource>
        </models>
        <resources>
            <dsprice_setup>
                <setup>
                    <module>DS_Price</module>
                </setup>
            </dsprice_setup>
        </resources>
    </global>
</config>